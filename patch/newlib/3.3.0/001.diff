+    // set new top
+    sbrk_top = ( caddr_t )ptr + incr;
+    // return pointer
+    return ptr;
+  // shrink is not supported
+  } else if ( incr < 0 ) {
+    return ( void* )-1;
+  } else {
+    return sbrk_top;
+  }
