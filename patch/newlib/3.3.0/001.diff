+/**
+ * @brief sbrk fake syscall ( non contiguous )
+ *
+ * @param incr
+ * @return caddr_t
+ */
+caddr_t _sbrk( int incr ) {
+  void *ptr = 0;
+  static caddr_t sbrk_top = 0;
+
+  if ( incr > 0 ) {
+    // allocate memory
+    ptr = _memory_acquire( incr, 2 );
+    // handle error
+    if ( 0 == ptr ) {
+      return ( caddr_t )-1;
+    }
+    // save for free during cleanup
